package com.doubletroubledice.ui {	import com.doubletroubledice.core.Model;	import com.doubletroubledice.events.GameEvent;		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.text.TextField;	import flash.text.TextFormat;		public class GameEndScreen extends Sprite	{		public var rolls:TextField;		public var jokers:TextField;		public var highestRoll:TextField;		public var bonusPoints:TextField;		public var doubles:TextField;		public var scoreScoreBoard:ScoreBoard;		private var _model:Model;		public function set model(value:Model):void 		{			_model = value;			_model.addEventListener( Event.CHANGE, update );		}				private function playAgain(event:MouseEvent):void 		{			trace("play again");			dispatchEvent( new GameEvent(GameEvent.PLAY_AGAIN)); 		}				public function GameEndScreen() 		{			scoreScoreBoard.header = "Score";		}				public function update(event:Event = null):void 		{			jokers.text =  String(_model.numJokers);			rolls.text =  String(_model.totalRollsUsed);			highestRoll.text =  String(_model.highestRoll);			doubles.text =  String(_model.numDoublesRolled);			scoreScoreBoard.value = _model.score;					}					}	}