package com.doubletroubledice.ui {	import flash.display.Sprite;	import flash.text.TextField;		public class ScoreBoard extends Sprite	{		public var header_txt:TextField;		public var value_txt:TextField;				public function get value():* { return value_txt.text; }		public function set value(value:*):void 		{			value_txt.text = String(value);		}				public function get header():String { return header_txt.text; }		public function set header(value:String):void 		{			header_txt.text = value;		}				public function ScoreBoard() {}			}	}