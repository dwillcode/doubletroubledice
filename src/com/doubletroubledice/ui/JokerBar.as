package com.doubletroubledice.ui {	import flash.display.MovieClip;	import flash.display.Sprite;	import com.greensock.TweenLite;	import com.greensock.easing.Elastic;			public class JokerBar extends MovieClip	{		public var multiplier2:MovieClip;		public var multiplier3:MovieClip;		public var multiplier4:MovieClip;				public var joker1:MovieClip;		public var joker2:MovieClip;		public var joker3:MovieClip;		public var joker4:MovieClip;				public function JokerBar() 		{			reset();		}				public function update(numJokers:int) : void		{			switch(numJokers) {				case 0:									break;								case 1: 					playJokerAnimation(1);					break;									case 2: 					playJokerAnimation(1);					playJokerAnimation(2);					break;									case 3: 					playJokerAnimation(1);					playJokerAnimation(2);					playJokerAnimation(3);					break;									case 4: 					playJokerAnimation(1);					playJokerAnimation(2);					playJokerAnimation(3);					playJokerAnimation(4);					break;									default: 					playJokerAnimation(1);					playJokerAnimation(2);					playJokerAnimation(3);					playJokerAnimation(4);					break;			}		}				private function playJokerAnimation(jokerNumber:int) : void		{			var joker:MovieClip = this["joker" + jokerNumber];						if (joker.currentLabel != "end") {				joker.play();			}			if(jokerNumber > 1 && jokerNumber < 4){				var multiplier:MovieClip = this["multiplier" + jokerNumber];				if(multiplier.visible == false){										multiplier.visible = true;					TweenLite.from( multiplier, 1, { scaleX: .1, scaleY: .1, alpha: 0, delay: 1, ease: Elastic.easeOut } );				}			}		}				public function reset() : void		{			for (var i:int = 1; i < 5; i++) {				this["joker" + i].gotoAndStop(1);				if (i != 5 && i !=1) {					this["multiplier" + i].visible = false;				}			}		}			}	}