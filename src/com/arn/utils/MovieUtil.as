package com.arn.utils {	import flash.display.DisplayObject;	import flash.display.MovieClip;	public dynamic class MovieUtil {				// CONSTANTS ------------------------------------				// PRIVATE PROPERTIES ---------------------------						// PUBLIC PROPERTIES ----------------------------						//--------------------------------------------------------------------------		//		// Constructor & Init Methods		//		//--------------------------------------------------------------------------				function MovieUtil ()		{			// Empty Constructor		}				//--------------------------------------------------------------------------		//		// Public Methods		//		//--------------------------------------------------------------------------						/**		 * Creates a property stamp of the supplied movie clip. It puts all		 * properties into an object titled "orig".		 * 		 * @param mc The MovieClip or sprite you want to stamp.		 * @returns An instance of the supplied movie clip if successful.		 */		public static function initClip( mc : MovieClip ) : MovieClip		{			var props 	: Array = [ "x", "y", "scaleX", "scaleY", "alpha", "rotation", "height", "width" ];						mc.orig				= {};						for each ( var value : * in props ) {				mc.orig[ value ] = mc[ value ];			}						return mc;		}			/**		 * Loops through the supplied array to initialize each of the clips		 *		 * @param arr Array of movie clips to initialize.		 * @return True if Successful		 */		public static function initClipArray( arr : Array ) : Boolean		{			for each ( var value : MovieClip in arr ) {				initClip( value );			}						return true;		}						//--------------------------------------------------------------------------		//  createPropertyStamp		//--------------------------------------------------------------------------				public static function createPropertyStamp( obj : DisplayObject ) : Object		{			var _stamp : Object = {};						_stamp.x		= obj.x;			_stamp.y		= obj.y;			_stamp.scaleX	= obj.scaleX;			_stamp.scaleY	= obj.scaleY;			_stamp.width	= obj.width;			_stamp.height	= obj.height;			_stamp.alpha	= obj.alpha;									return _stamp;		}				//--------------------------------------------------------------------------		//		// Event Handlers		//		//--------------------------------------------------------------------------						//--------------------------------------------------------------------------		//		// Getters/Setters		//		//--------------------------------------------------------------------------						//--------------------------------------------------------------------------		//		// Private Methods		//		//--------------------------------------------------------------------------											}}