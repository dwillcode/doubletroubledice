package com.arn.utils {	import flash.text.*;		/**	 * TextField Utils	 * Class that contains static utility methods for manipulating TextFields.	 * 	 * @author 	Derrick Williams, Arnold Worldwide	 * @author	http://arnoldworldwide.com/	 * @version 1.0, ActionScript 3.0	 */  	public class TextFieldUtils 	{		/**		 * Changes the text format of all instances of the search string within the		 * given text field. 		 * 		 * @param 	textField 	The text field to edit.		 * @param 	search 		The string that the text format will be applied to.		 * @param	tf			The text format to apply to the search instances.		 */		public static function searchAndSetTextFormat( txt:TextField, search:String, tf:TextFormat ) : void		{			var count			: int		= 0;				// Number of search instances found			var found 			: Boolean	= false;			// Flags if an instance was found			var sIndexes		: Array 	= [];				// Stores the indexes for the instances of the search string			var sLength			: int		= search.length;	// Length of the search string			var endIndex		: int		= 0;				// The last index of the search instance 						// if the search string instance exists, store its index, and repeat;			// otherwise, stop looking			do {				var tmpIndex = txt.text.indexOf( search, endIndex );								if( tmpIndex > -1 ){					sIndexes[count] = tmpIndex;					endIndex		= sIndexes[count] + sLength;					count++;					found = true;				} else {					found = false;				}							} while( found );						// if the search instance was found, apply the text format			if( count > 0 ){				for( var i in sIndexes ) {					endIndex = sIndexes[i] + sLength;					txt.setTextFormat( tf, sIndexes[i], endIndex );				}			} else {				return;			}		}	}}