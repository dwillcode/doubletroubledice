package com.arn.analytics{	import flash.events.Event;	import flash.net.URLRequest;	import flash.net.URLLoader;	import flash.net.navigateToURL;	import flash.external.ExternalInterface;		/**	 * Spotlight Tag	 * A class that contains static methods to call Google analytics's javascript functions. 	 * 	 * NOTE: The tags are provided by the analytics team and are based on the project.	 * 	 * @usage	 * 	 * @author	Derrick Williams, Arnold Worldwide	 * @author	http://www.arnoldworldwide.com	 * @version	1.0, ActionScript 3.0	 */	public class Spotlight	{		/**		 * @param	tag		<string>	The analytics tag associated with the page/link		 */		public static function track( tag:String, cat:String  ) : void		{			var rand = Math.floor(Math.random() * 10000000);			tag += ("cat=" + cat + ";ord=" + rand + "?");			var loader:URLLoader = new URLLoader( new URLRequest(tag) );			loader.addEventListener( Event.COMPLETE, onComplete );						trace("\n>> DoubleClick Spotlight tag called: " + tag);		}				public static function onComplete(evt:Event)		{ 			trace("\n>> DoubleClick Spotlight tag loaded"); 			trace(evt.target.data);		}						}}