package com.arn.analytics{	import flash.net.URLRequest;	import flash.net.navigateToURL;	import flash.external.ExternalInterface;		/**	 * Google Analytics	 * A class that contains static methods to call Google analytics's javascript functions. 	 * 	 * NOTE: The tags are provided by the analytics team and are based on the project.	 * 	 * @usage	 * GoogleAnalytics.trackPageView( "Funville/Link/Beachball Nav" );	 * 	 * @author	Derrick Williams, Arnold Worldwide	 * @author	http://www.arnoldworldwide.com	 * @version	1.0, ActionScript 3.0	 */	public class GoogleAnalytics	{		/**		 * Calls the "pageTracker._trackPageView" javascript function and passes 		 * it the analytics tag associtated with the page/link		 * @param	tag		<string>	The analytics tag associated with the page/link		 */		public static function trackPageView( tag:String ) : void		{			if ( ExternalInterface.available ) {				ExternalInterface.call( "pageTracker._trackPageview", tag );			} else {				var string:String = "javascript:pageTracker._trackPageview('" + tag + "');";				navigateToURL( new URLRequest( string ) );			}						trace("\n>> GoogleAnalytics tag called: " + tag);		}	}}